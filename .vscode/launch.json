  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug nest",
      "request": "launch",
      // runtime args 代表 参数，在这里是启动 nest 的命令
      "runtimeArgs": ["run", "start:dev"],
      // runtimeExecutable 代表执行的命令
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Attach",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    }
  ]
}
